<section>
  <h2>Create a Category</h2>
  <%= form_with model: @category, html: { multipart: true }, url: categories_path do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :icon %>
      <%= f.file_field :icon %>
    </div>
    <div>
      <%= f.submit 'Create category' %>
    </div>
  <% end %>
</section>
